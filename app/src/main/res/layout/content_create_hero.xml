<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tiagopedro.fightingfantasy.CreateHeroActivity"
    tools:showIn="@layout/activity_create_hero">

    <ImageButton
        android:layout_width="106dp"
        android:layout_height="88dp"
        android:id="@+id/skill_button"
        android:layout_row="0"
        android:layout_column="0"
        android:clickable="true"
        android:src="@drawable/skill_icon"
        android:focusable="false"
        android:outlineProvider="bounds"
        android:contentDescription="Skill"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="106dp"
        android:layout_height="88dp"
        android:id="@+id/stamina_button"
        android:layout_row="0"
        android:layout_column="1"
        android:clickable="true"
        android:src="@drawable/stamina_icon"
        android:focusable="false"
        android:outlineProvider="bounds"
        android:contentDescription="Stamina"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="106dp"
        android:layout_height="88dp"
        android:id="@+id/luck_button"
        android:layout_row="0"
        android:layout_column="2"
        android:contentDescription="Luck"
        android:clickable="true"
        android:src="@drawable/luck_icon"
        android:focusable="false"
        android:outlineProvider="bounds"
        android:scaleType="fitCenter" />
</GridLayout>
